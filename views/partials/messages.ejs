<% if(typeof errors != 'undefined') {%>
    <% errors.forEach(function(error) { %>
        <%=error.msg%>
    <% }); %>
<% }; %>

<% if(typeof successMsg != 'undefined') {%>
    <% successMsg.forEach(function(message) { %>
        <%=message.msg%>
    <% }); %>
<% }; %>

<% if(success_msg !== '') { %>
    <p style="color:green">
    <%= success_msg %>
    </p>
<% }; %>

<% if(error_msg != '') { %>
    <%= error_msg %>
<% }; %>

<% if(error != '') { %>
    <%= error %>
<% }; %>
